<% const appBranding = (typeof branding !== 'undefined' && branding) ? branding : { logoDataUrl: 'https://caodang.fpt.edu.vn/wp-content/uploads/logo-3.png', subtext: 'FPT Polytechnic' }; %>
<!-- Sidebar -->
<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <img id="appSidebarLogo" src="<%= appBranding.logoDataUrl %>" alt="<%= appBranding.subtext %>" class="logo">
    </div>

    <nav class="sidebar-nav">
        <p class="sidebar-nav-title">Chức năng</p>
        <a href="/grade-check" data-route="/grade-check" class="nav-item <%= activeClass(currentRoute, '/grade-check') %>">
            <i class="bi bi-clipboard-check"></i>
            <span>Kiểm tra điểm</span>
        </a>
        <a href="/profiles" data-route="/profiles" class="nav-item <%= activeClass(currentRoute, '/profiles') %>">
            <i class="bi bi-gear"></i>
            <span>Quản lý Profile</span>
        </a>
        <a href="/classes" data-route="/classes" class="nav-item <%= activeClass(currentRoute, '/classes') %>">
            <i class="bi bi-people-fill"></i>
            <span>Quản lý Lớp học</span>
        </a>
        <a href="/template" data-route="/template" class="nav-item <%= activeClass(currentRoute, '/template') %>">
            <i class="bi bi-file-earmark-text"></i>
            <span>Tạo Template</span>
        </a>
        <% if (user && user.role === 'admin') { %>
            <a href="/branding" data-route="/branding" class="nav-item <%= activeClass(currentRoute, '/branding') %>">
                <i class="bi bi-palette"></i>
                <span>Cài đặt</span>
            </a>
        <% } %>
    </nav>
</div>
